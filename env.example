# Database Configuration
# Database type: 'postgres' (default) or 'neon'
DB_TYPE=postgres

# Database URL - required for both database types
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# SSL Configuration for standard PostgreSQL
# Set to 'true' if your PostgreSQL server requires SSL
# Default is 'false' (non-SSL) for local development
DB_SSL=false

# JWT Secret - required for authentication
JWT_SECRET=your_jwt_secret_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Server Configuration
PORT=3501
NODE_ENV=development

# External Access Configuration
# Set this to your IP address when accessing from external network
# Example: BASE_URL=http://192.168.1.100:3501
BASE_URL=http://localhost:3501

# CORS Configuration
# Set this to your frontend URL when accessing from external network
# Example: CORS_ORIGIN=http://192.168.1.100:5173
CORS_ORIGIN=*

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Optional: AWS S3 Configuration for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# Optional: Redis Configuration for session storage
REDIS_URL=redis://localhost:6379

# Trigger.dev Configuration (for background task processing)
TRIGGER_SECRET_KEY=tr_dev_your_trigger_secret_key
TRIGGER_PROJECT_ID=proj_your_project_id

# Unsplash API Configuration (for birthday card image search)
VITE_ACCESS_KEY=your_unsplash_access_key_here
VITE_SECRET_KEY=your_unsplash_secret_key_here

