# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/authentik_db?sslmode=disable

# Server Configuration
PORT=5003
GIN_MODE=debug

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# Email Service Configuration
# Choose one email provider and configure accordingly

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# Resend
RESEND_API_KEY=your-resend-api-key

# Default email settings
DEFAULT_FROM_EMAIL=admin@zendwise.work
DEFAULT_FROM_NAME=Authentik

# Birthday Worker Configuration
BIRTHDAY_CHECK_INTERVAL=3600  # Check every hour (in seconds)
BIRTHDAY_BATCH_SIZE=50        # Process 50 birthday cards at once
BIRTHDAY_MAX_RETRIES=3        # Retry failed sends 3 times
BIRTHDAY_RETRY_DELAY=300      # Wait 5 minutes between retries (in seconds)
BIRTHDAY_WORKER_ENABLED=true  # Enable/disable birthday worker

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# Email Fallback Configuration
# WARNING: Only enable in development. In production, Temporal should always be used.
ENABLE_EMAIL_FALLBACK=false  # Allow direct email sending when Temporal is unavailable (default: false)
